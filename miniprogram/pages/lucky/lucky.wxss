/**lucky.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.desc-input {
  width: 100%;
  min-height: 100rpx;
  height: auto;
  margin: 20rpx 0;
  padding: 20rpx;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  line-height: 1.5;
  word-break: break-all;
  word-wrap: break-word;
  white-space: normal;
  overflow-wrap: break-word;
}

.submit-btn {
  width: 100%;
  background: #007aff;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.lottery-container {
  margin: 20rpx auto 0 auto;
  text-align: center;
}

.lottery-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.lottery-numbers {
  display: flex !important;
  justify-content: center;
  align-items: center;
  gap: 15rpx;
  flex-wrap: nowrap !important;
  flex-direction: row !important;
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto;
  height: 80rpx;
  overflow: visible;
}

.lottery-ball {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
  flex-shrink: 0;
  position: relative;
  margin: 0 5rpx;
}

.lottery-ball.red {
  background: linear-gradient(135deg, #ff4757, #ff3742);
}

.lottery-ball.blue {
  background: linear-gradient(135deg, #3742fa, #2f3542);
}

.recommendation-container {
  margin: 40rpx 0 0 0;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.recommendation-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  text-align: center;
}

.recommendation-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
  text-align: left;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  overflow-wrap: break-word;
  width: 100%;
  box-sizing: border-box;
  display: block;
  overflow: hidden;
} 