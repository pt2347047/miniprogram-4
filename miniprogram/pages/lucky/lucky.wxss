/**lucky.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* Tab样式 */
.tab-container {
  display: flex;
  background: #f8f9fa;
  border-bottom: 1rpx solid #e9ecef;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 20rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s;
}

.tab-item.active {
  color: #007aff;
  background: white;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #007aff;
  border-radius: 2rpx;
}

.tab-content {
  padding: 40rpx;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.input-container {
  margin-bottom: 30rpx;
}

.input-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.desc-input {
  width: 100%;
  min-height: 100rpx;
  height: auto;
  margin: 20rpx 0;
  padding: 20rpx;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  line-height: 1.5;
  word-break: break-all;
  word-wrap: break-word;
  white-space: normal;
  overflow-wrap: break-word;
}

.submit-btn {
  width: 100%;
  background: #007aff;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.lottery-container {
  margin: 20rpx auto 0 auto;
  text-align: center;
}

.lottery-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.lottery-numbers {
  display: flex !important;
  justify-content: center;
  align-items: center;
  gap: 15rpx;
  flex-wrap: nowrap !important;
  flex-direction: row !important;
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto;
  height: 80rpx;
  overflow: visible;
}

.lottery-ball {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
  flex-shrink: 0;
  position: relative;
  margin: 0 5rpx;
}

.lottery-ball.red {
  background: linear-gradient(135deg, #ff4757, #ff3742);
}

.lottery-ball.blue {
  background: linear-gradient(135deg, #3742fa, #2f3542);
}

.recommendation-container {
  margin: 40rpx 0 0 0;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.recommendation-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  text-align: center;
}

.recommendation-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
  text-align: left;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  overflow-wrap: break-word;
  width: 100%;
  box-sizing: border-box;
  display: block;
  overflow: hidden;
}

/* 分享功能样式 */
.share-list {
  padding: 0;
}

.share-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.share-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: #f0f0f0;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.share-time {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.share-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 20rpx;
}

.share-actions {
  display: flex;
  justify-content: flex-end;
}

.like-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: #f8f9fa;
  transition: all 0.3s;
}

.like-btn.liked {
  background: #ffe6e6;
}

.like-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.like-count {
  font-size: 24rpx;
  color: #666;
} 