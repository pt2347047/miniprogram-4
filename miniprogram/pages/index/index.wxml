<!--index.wxml-->
<navigation-bar title="每日幸运社" back="{{false}}" color="black" background="#FFF"></navigation-bar>
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <!-- 标题图片区域 -->
    <view class="title-section">
      <view class="title-container">
        <image class="title-image" src="/images/title-bg.png" mode="aspectFit"></image>
        <text class="title-text">每日幸运社</text>
      </view>
    </view>
    
    <!-- 功能按钮区域 -->
    <view class="function-grid">
      <view class="function-row">
        <view class="function-item" bindtap="navigateToLucky">
          <view class="function-icon">🎯</view>
          <text class="function-text">每日幸运</text>
        </view>
        <view class="function-item" bindtap="navigateToShare">
          <view class="function-icon">💬</view>
          <text class="function-text">每日分享</text>
        </view>
      </view>
      <view class="function-row">
        <view class="function-item" bindtap="navigateToInfo">
          <view class="function-icon">📊</view>
          <text class="function-text">实用信息</text>
        </view>
        <view class="function-item" bindtap="navigateToProfile">
          <view class="function-icon">👤</view>
          <text class="function-text">个人信息</text>
        </view>
      </view>
    </view>
  </view>
</scroll-view>
