/**profile.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding-bottom: 150rpx;
}

.profile-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 30rpx;
  background: white;
  border-radius: 20rpx;
  margin: 20rpx 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.user-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-bottom: 30rpx;
  background: #f0f0f0;
  border: 6rpx solid #f8f9fa;
}

.user-info {
  text-align: center;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}

.join-time {
  font-size: 24rpx;
  color: #666;
  display: block;
}

/* 幸运列表功能样式 */
.lucky-list-section {
  margin: 20rpx 40rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  overflow: visible;
  padding: 40rpx;
}

/* 幸运列表样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}



.control-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
  gap: 20rpx;
}

.control-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
  min-width: 120rpx;
}

.picker {
  flex: 1;
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

/* 球选择器样式 */
.specify-controls {
  margin-bottom: 30rpx;
}

.ball-selector-row {
  display: flex;
  gap: 40rpx;
  margin-bottom: 30rpx;
}

.ball-selector {
  flex: 1;
}

.ball-buttons {
  display: flex;
  gap: 15rpx;
  margin-top: 15rpx;
}

.ball-button {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  background: #f0f0f0;
  color: #666;
  border: 2rpx solid #e0e0e0;
  transition: all 0.3s;
}

.ball-button.selected {
  background: #007aff;
  color: white;
  border-color: #007aff;
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.3);
}

/* 主要球展示区域样式 */
.main-balls-container {
  margin-bottom: 30rpx;
}

.main-balls-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.main-balls {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 15rpx;
  flex-wrap: nowrap;
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto;
  height: 80rpx;
  overflow: visible;
}

.main-ball {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
  flex-shrink: 0;
  position: relative;
  margin: 0 5rpx;
  transition: all 0.3s;
  cursor: pointer;
}

.main-ball.red {
  background: linear-gradient(135deg, #ff4757, #ff3742);
}

.main-ball.blue {
  background: linear-gradient(135deg, #3742fa, #2f3542);
}

.main-ball.selected {
  transform: scale(1.1);
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.3);
}

.main-ball.red.has-value {
  background: linear-gradient(135deg, #ffc107, #ffb300);
}

.main-ball.blue.has-value {
  background: linear-gradient(135deg, #17a2b8, #138496);
}

/* 选择器容器样式 */
.selector-container {
  margin: 20rpx 0;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 2rpx solid #e9ecef;
}

.selector-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.selector-balls {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.selector-ball {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  color: white;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.2);
  transition: all 0.3s;
  cursor: pointer;
}

.selector-ball.red {
  background: linear-gradient(135deg, #ff4757, #ff3742);
}

.selector-ball.blue {
  background: linear-gradient(135deg, #3742fa, #2f3542);
}

.selector-ball.red.selected {
  transform: scale(1.1);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.3);
  background: linear-gradient(135deg, #ffc107, #ffb300);
}

.selector-ball.blue.selected {
  transform: scale(1.1);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.3);
  background: linear-gradient(135deg, #17a2b8, #138496);
}

.selector-actions {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.selector-btn {
  padding: 15rpx 30rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: bold;
  border: none;
  min-width: 80rpx;
}

.clear-btn {
  background: #6c757d;
  color: white;
}

.confirm-btn {
  background: #007aff;
  color: white;
}



/* 生成按钮样式 */
.generate-btn {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 25rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.generate-btn:disabled {
  background: #ccc;
  color: #999;
}

.generate-btn-small {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 15rpx 8rpx;
  font-size: 24rpx;
  font-weight: bold;
  min-width: 30rpx;
  max-width: 60rpx;
  white-space: nowrap;
  flex-shrink: 0;
}

.generate-btn-small:disabled {
  background: #ccc;
  color: #999;
}

/* 结果展示样式 */
.results-container {
  width: 100%;
  box-sizing: border-box;
  margin-top: 20rpx;
}

.result-item {
  margin-bottom: 15rpx;
  padding: 20rpx 15rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e9ecef;
}

.lottery-numbers {
  display: flex !important;
  justify-content: center;
  align-items: center;
  gap: 6rpx;
  flex-wrap: nowrap !important;
  flex-direction: row !important;
  width: 100%;
  max-width: 500rpx;
  margin: 0 auto;
  height: 50rpx;
  overflow: visible;
}

.lottery-ball {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  font-weight: bold;
  color: white;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.2);
  flex-shrink: 0;
  position: relative;
  margin: 0 2rpx;
}

.lottery-ball.red {
  background: linear-gradient(135deg, #ff4757, #ff3742);
}

.lottery-ball.blue {
  background: linear-gradient(135deg, #3742fa, #2f3542);
}

.lottery-ball.red.matches {
  background: linear-gradient(135deg, #28a745, #20c997);
  box-shadow: 0 4rpx 12rpx rgba(40, 167, 69, 0.4);
}

.lottery-ball.blue.matches {
  background: linear-gradient(135deg, #007bff, #0056b3);
  box-shadow: 0 4rpx 12rpx rgba(0, 123, 255, 0.4);
}

.result-item.matches-blue {
  border: 2rpx solid #007bff;
  background: #f8fbff;
}

.result-item.matches-red {
  border: 2rpx solid #28a745;
  background: #f8fff9;
}



.result-summary {
  text-align: center;
  font-size: 28rpx;
  color: #007aff;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #e3f2fd;
  border-radius: 8rpx;
}

.no-results {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 40rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

/* 幸运列表样式 */
.lucky-list {
  margin-bottom: 30rpx;
}

.lucky-item {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 15rpx;
  margin-bottom: 12rpx;
  border: 1rpx solid #e9ecef;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.lucky-actions {
  display: flex;
  gap: 12rpx;
  margin-left: 15rpx;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.2s;
}

.action-icon:active {
  transform: scale(0.9);
}

.delete-icon {
  background: #dc3545;
  color: white;
}

.top-icon {
  background: #007aff;
  color: white;
}

.empty-state {
  text-align: center;
  padding: 60rpx 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  display: block;
  margin-bottom: 15rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
  margin: 30rpx 0;
}

.page-btn {
  background: #f8f9fa;
  color: #333;
  border: 1rpx solid #e9ecef;
  border-radius: 6rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

.page-btn:disabled {
  background: #e9ecef;
  color: #999;
}

.page-info {
  font-size: 24rpx;
  color: #666;
}

.function-buttons {
  margin-top: 30rpx;
}

.function-btn {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
  font-weight: bold;
}

