/**tools.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* Tab样式 */
.tab-container {
  display: flex;
  background: #f8f9fa;
  border-bottom: 1rpx solid #e9ecef;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 20rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s;
}

.tab-item.active {
  color: #007aff;
  background: white;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #007aff;
  border-radius: 2rpx;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.tab-content {
  padding: 40rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.control-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
  gap: 20rpx;
}

.control-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
  min-width: 120rpx;
}

.picker {
  flex: 1;
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.generate-btn-small {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 15rpx 8rpx;
  font-size: 24rpx;
  font-weight: bold;
  min-width: 30rpx;
  max-width: 60rpx;
  white-space: nowrap;
  flex-shrink: 0;
}

.generate-btn-small:disabled {
  background: #ccc;
  color: #999;
}

/* 结果展示样式 */
.results-container {
  width: 100%;
  box-sizing: border-box;
  margin-top: 20rpx;
}

.result-item {
  margin-bottom: 15rpx;
  padding: 20rpx 15rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e9ecef;
}

.lottery-numbers {
  display: flex !important;
  justify-content: center;
  align-items: center;
  gap: 10rpx;
  flex-wrap: nowrap !important;
  flex-direction: row !important;
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto;
  height: 70rpx;
  overflow: visible;
}

.lottery-ball {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  color: white;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
  flex-shrink: 0;
  position: relative;
  margin: 0 3rpx;
}

.lottery-ball.red {
  background: linear-gradient(135deg, #ff4757, #ff3742);
}

.lottery-ball.blue {
  background: linear-gradient(135deg, #3742fa, #2f3542);
}

.result-summary {
  text-align: center;
  font-size: 28rpx;
  color: #007aff;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #e3f2fd;
  border-radius: 8rpx;
}

.no-results {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 40rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

/* 主要球展示区域样式 */
.main-balls-container {
  margin-bottom: 30rpx;
}

.main-balls-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.main-balls {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 15rpx;
  flex-wrap: nowrap;
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto;
  height: 80rpx;
  overflow: visible;
}

.main-ball {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
  flex-shrink: 0;
  position: relative;
  margin: 0 5rpx;
  transition: all 0.3s;
  cursor: pointer;
}

.main-ball.red {
  background: linear-gradient(135deg, #ff4757, #ff3742);
}

.main-ball.blue {
  background: linear-gradient(135deg, #3742fa, #2f3542);
}

.main-ball.selected {
  transform: scale(1.1);
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.3);
}

.main-ball.red.has-value {
  background: linear-gradient(135deg, #ffc107, #ffb300);
}

.main-ball.blue.has-value {
  background: linear-gradient(135deg, #17a2b8, #138496);
}

/* 选择器容器样式 */
.selector-container {
  margin: 20rpx 0;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 2rpx solid #e9ecef;
}

.selector-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.selector-balls {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.selector-ball {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  color: white;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.2);
  transition: all 0.3s;
  cursor: pointer;
}

.selector-ball.red {
  background: linear-gradient(135deg, #ff4757, #ff3742);
}

.selector-ball.blue {
  background: linear-gradient(135deg, #3742fa, #2f3542);
}

.selector-ball.red.selected {
  transform: scale(1.1);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.3);
  background: linear-gradient(135deg, #ffc107, #ffb300);
}

.selector-ball.blue.selected {
  transform: scale(1.1);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.3);
  background: linear-gradient(135deg, #17a2b8, #138496);
}

.selector-actions {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.selector-btn {
  padding: 15rpx 30rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: bold;
  border: none;
  min-width: 80rpx;
}

.clear-btn {
  background: #6c757d;
  color: white;
}

.confirm-btn {
  background: #007aff;
  color: white;
}

/* 匹配样式 */
.lottery-ball.red.matches {
  background: linear-gradient(135deg, #28a745, #20c997);
  box-shadow: 0 4rpx 12rpx rgba(40, 167, 69, 0.4);
}

.lottery-ball.blue.matches {
  background: linear-gradient(135deg, #007bff, #0056b3);
  box-shadow: 0 4rpx 12rpx rgba(0, 123, 255, 0.4);
}

.result-item.matches-blue {
  border: 2rpx solid #007bff;
  background: #f8fbff;
}

.result-item.matches-red {
  border: 2rpx solid #28a745;
  background: #f8fff9;
}

/* 导入按钮样式 */
.import-section {
  margin-top: 30rpx;
  text-align: center;
}

.import-btn {
  background: linear-gradient(135deg, #28a745, #20c997);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(40, 167, 69, 0.3);
  transition: all 0.3s;
}

.import-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(40, 167, 69, 0.3);
}

/* 导入成功后的跳转按钮样式 */
.import-success-section {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 1000;
}

.navigate-btn {
  background: linear-gradient(135deg, #007aff, #0056b3);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
  transition: all 0.3s;
}

.navigate-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.3);
} 