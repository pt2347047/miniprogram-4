/**info.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.date-section {
  text-align: center;
  padding: 40rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  margin-bottom: 40rpx;
}

.date-text {
  font-size: 36rpx;
  font-weight: bold;
}

.lottery-section {
  padding: 0 40rpx;
  margin-bottom: 60rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.lottery-numbers {
  display: flex !important;
  justify-content: center;
  align-items: center;
  gap: 15rpx;
  flex-wrap: nowrap !important;
  flex-direction: row !important;
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto;
  height: 80rpx;
  overflow: visible;
}

.lottery-ball {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
  flex-shrink: 0;
  position: relative;
  margin: 0 5rpx;
}

.lottery-ball.red {
  background: linear-gradient(135deg, #ff4757, #ff3742);
}

.lottery-ball.blue {
  background: linear-gradient(135deg, #3742fa, #2f3542);
}

.stats-section {
  padding: 0 40rpx;
}

.stats-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.stats-item {
  flex: 1;
  text-align: center;
}

.stats-label {
  font-size: 32rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.stats-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #007aff;
  display: block;
}

 